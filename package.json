{
  "name": "digital-land.info",
  "version": "1.0.0",
  "description": "Planning and Housing Data Platform",
  "config": {
    "assets": {
      "sourceDir": "assets",
      "distDir": "static"
    }
  },
  "scripts": {
    "build:javascripts": "rollup --config etc/rollup.config.js",
    "build:styles": "node-sass assets/stylesheets -o static/stylesheets --include-path node_modules/govuk-frontend --include-path assets",
    "build:govuk": "rsync -ar node_modules/govuk-frontend/govuk/assets/ static/govuk/assets/",
    "build:images": "rsync -ar assets/images/ static/images",
    "build": "npm-run-all --serial build:*",
    "watch:javascripts": "rollup --config etc/rollup.config.js --watch",
    "watch:styles": "node-sass assets/stylesheets -o static/stylesheets --include-path node_modules/govuk-frontend --watch --recursive",
    "watch:images": "rsync -ar assets/images/ static/images",
    "watch": "npm-run-all --parallel watch:*",
    "dev": "npm run watch",
    "serve": "browser-sync start --proxy 'localhost:8000' --files '.'",
    "nps": "nps -c ./node_modules/digital-land-frontend/package-scripts.js",
    "postinstall": "npm i --save copyfiles govuk-frontend node-sass nps nps-utils"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digital-land/digital-land.info.git"
  },
  "keywords": [
    "Data",
    "digital",
    "land",
    "python",
    "open",
    "jinja",
    "FastAPI"
  ],
  "author": "Digital Land Team - DLUHC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digital-land/digital-land.info/issues"
  },
  "homepage": "https://github.com/digital-land/digital-land.info#readme",
  "dependencies": {
    "copyfiles": "^2.4.1",
    "digital-land-frontend": "https://gitpkg.now.sh/digital-land/digital-land-frontend/package?main",
    "govuk-frontend": "^3.14.0",
    "node-sass": "^6.0.1",
    "nps": "^5.10.0",
    "nps-utils": "^1.7.0"
  }
}
